<?xml version="1.0"?>
<job_conf>
    <plugins>
        <plugin id="slurm" type="runner" load="galaxy.jobs.runners.slurm:SlurmJobRunner" workers="4">
            <param id="drmaa_library_path">/usr/lib/slurm-drmaa/lib/libdrmaa.so</param>
        </plugin>
    </plugins>
    <handlers default="handlers">
        <handler id="handler0" tags="handlers"/>
        <handler id="handler1" tags="handlers"/>
        <handler id="handler2" tags="handlers"/>
        <handler id="handler3" tags="handlers"/>
    </handlers>
    <destinations default="single">
            <destination id="single" runner="slurm">
               <env file="/home/galaxy/galaxy/.venv/bin/activate" />
               <param id="type">python</param>
               <param id="nativeSpecification">--partition=debug --ntasks=1</param>
               <param id="docker_sudo">false</param>
               <param id="docker_volumes_from">galaxy</param>
            </destination>
            <destination id="double" runner="slurm">
               <env file="/home/galaxy/galaxy/.venv/bin/activate" />
               <param id="type">python</param>
               <param id="nativeSpecification">--partition=debug --ntasks=2</param>
               <param id="docker_sudo">false</param>
               <param id="docker_volumes_from">galaxy</param>
            </destination>
            <destination id="cluster_4" runner="slurm">
               <env file="/home/galaxy/galaxy/.venv/bin/activate" />
               <param id="type">python</param>
               <param id="nativeSpecification">--partition=debug --ntasks=4</param>
               <param id="docker_sudo">false</param>
               <param id="docker_volumes_from">galaxy</param>
            </destination>
            <destination id="cluster_8" runner="slurm">
               <env file="/home/galaxy/galaxy/.venv/bin/activate" />
               <param id="type">python</param>
               <param id="nativeSpecification">--partition=debug --ntasks=8</param>
               <param id="docker_sudo">false</param>
               <param id="docker_volumes_from">galaxy</param>
            </destination>
    </destinations>
    <limits>
        <limit type="destination_total_concurrent_jobs" id="single">16</limit>
        <limit type="destination_total_concurrent_jobs" id="double">8</limit>
        <limit type="destination_total_concurrent_jobs" id="cluster_4">4</limit>
        <limit type="destination_total_concurrent_jobs" id="cluster_8">2</limit>


        <limit type="anonymous_user_concurrent_jobs">1</limit>

        <limit type="destination_user_concurrent_jobs" id="single">16</limit>
        <limit type="destination_user_concurrent_jobs" id="double">8</limit>
        <limit type="destination_user_concurrent_jobs" id="cluster_4">4</limit>
        <limit type="destination_user_concurrent_jobs" id="cluster_8">2</limit>

    </limits>
   <tools>
        <tool id="bowtie" destination="cluster_8"/>
        <tool id="bowtie2" destination="cluster_8"/>
        <tool id="bowtieForSmallRNA" destination="cluster_8"/>
        <tool id="bowtie_wrapper" destination="cluster_8"/>
        <tool id="bwa" destination="cluster_8"/>
        <tool id="bwa_mem" destination="cluster_8"/>        
        <tool id="bwa_wrappers" destination="cluster_8"/>
        <tool id="cutadapt" destination="cluster_8" />
        <tool id="deeptools_multi_bam_summary" destination="cluster_8"/>
        <tool id="deeptools_plot_correlation" destination="cluster_8"/>
        <tool id="deeptools_compute_matrix" destination="cluster_8"/>
        <tool id="deeptools_bam_coverage" destination="cluster_8"/>
        <tool id="deeptools_plot_coverage" destination="cluster_8"/>
        <tool id="deeptools_plot_fingerprint" destination="cluster_8"/>
        <tool id="dexseq_count" destination="double"/>
        <tool id="dexseq" destination="double"/>
        <tool id="fastq_dump" destination="double" />
        <tool id="hisat2" destination="cluster_8"/>
        <tool id="hisat2_index_builder_data_manager" destination="cluster_4"/>
        <tool id="mircounts" destination="double"/>
        <tool id="ncbi_blastx_wrapper" destination="cluster_8"/>
        <tool id="ncbi_blastn_wrapper" destination="cluster_8"/>
        <tool id="ncbi_blastp_wrapper" destination="cluster_8"/>
        <tool id="picard_SamToFastq" destination="cluster_2" />
        <tool id="rna_star" destination="cluster_8"/>
        <tool id="rna_starsolo" destination="cluster_8"/>
        <tool id="samtools_cram_to_bam" destination="double"/>
        <tool id="samtools_slice_bam" destination="double"/>
        <tool id="samtools_view" destination="cluster_4"/>
        <tool id="samtools_rmdup" destination="cluster_4"/>
        <tool id="samtools_fastx" destination="cluster_4"/>
        <tool id="samtool_filter2" destination="cluster_4"/>
        <tool id="small_rna_maps" destination="double"/>
        <tool id="sr_bowtie_dataset_annotation" destination="cluster_8"/>
        <tool id="tp_grep_tool" destination="single" />
   </tools>
</job_conf>
